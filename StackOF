#include <iostream>
using namespace std;

int x;

int a(int &x)
{
  int y = x--;
  int z = x - 2;

  if (y == 0)
  {
    return (5*4-6*a(z));
  }else if (z == 0)
  {
    return (5*a(y)-6*4);
  }else if (y == 1)
  {
    return (5*9-6*a(z));
  }else if (z == 1)
  {
    return (5*a(y)-6*9);
  }else{
    return (5*(a(y))-6*(a(z)));
  }
}

int main() 
{
  cout << "Enter an integer value for x: ";
  cin >> x; 
  a(x);

  return 0;
}
